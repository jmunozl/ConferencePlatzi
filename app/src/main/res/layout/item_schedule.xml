<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemScheduleHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|bottom"
                android:text="@string/format_text_hour"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/itemSheduleTitulo"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvItemScheduleAmPm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|top"
                android:text="@string/pm"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/itemSheduleSubTitulo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="@dimen/marginSheduleItem"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemScheduleConferenceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/nombre_conferencia"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/itemSheduleSubTitulo" />

            <TextView
                android:id="@+id/tvItemScheduleConferenceSpeaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/speaker_name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/itemSheduleSpeakerTitulo" />

            <TextView
                android:id="@+id/tvItemScheduleTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/tag"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/itemSheduleSpeakerTitulo" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>